@using BestelApp_Web.Controllers
@model AdminOrderDetailViewModel

@{
    ViewData["Title"] = "Order details";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    @if (TempData["SuccessBericht"] != null)
    {
        <div class="alert alert-success" role="alert" style="margin-bottom: 1.5rem; padding: 1rem; background: hsl(120 40% 95%); border: 1px solid hsl(120 40% 70%); border-radius: 8px; color: hsl(120 40% 20%);">
            ✅ @TempData["SuccessBericht"]
        </div>
    }
    @if (TempData["FoutBericht"] != null)
    {
        <div class="alert alert-danger" role="alert" style="margin-bottom: 1.5rem; padding: 1rem; background: hsl(var(--danger) / 0.1); border: 1px solid hsl(var(--danger)); border-radius: 8px; color: hsl(var(--danger));">
            ❌ @TempData["FoutBericht"]
        </div>
    }

    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Bestelling</div>
        <h1 class="catalog-title">@Model.OrderId</h1>
        <p class="catalog-subtitle">@Model.UserName (@Model.UserEmail) • @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="p-4" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
                <div style="font-weight:700; margin-bottom: 0.75rem;">Samenvatting</div>
                <div style="color:hsl(var(--muted-foreground)); margin-bottom: 0.5rem;">Status</div>
                @{
                    var statusText = Model.Status.ToLower() switch
                    {
                        "pending" => "In behandeling",
                        "processing" => "Wordt verwerkt",
                        "shipped" => "Verzonden",
                        "delivered" => "Afgeleverd",
                        "completed" => "Voltooid",
                        "cancelled" => "Geannuleerd",
                        "failed" => "Mislukt",
                        _ => Model.Status
                    };
                    var statusBg = Model.Status.ToLower() switch
                    {
                        "pending" => "hsl(41 52% 90%)",
                        "processing" => "hsl(200 60% 90%)",
                        "shipped" => "hsl(220 60% 90%)",
                        "delivered" => "hsl(120 40% 90%)",
                        "completed" => "hsl(120 40% 90%)",
                        "cancelled" => "hsl(var(--muted))",
                        "failed" => "hsl(var(--danger) / 0.1)",
                        _ => "hsl(var(--muted))"
                    };
                    var statusColor = Model.Status.ToLower() switch
                    {
                        "pending" => "hsl(41 52% 40%)",
                        "processing" => "hsl(200 60% 30%)",
                        "shipped" => "hsl(220 60% 30%)",
                        "delivered" => "hsl(120 40% 30%)",
                        "completed" => "hsl(120 40% 30%)",
                        "cancelled" => "hsl(var(--muted-foreground))",
                        "failed" => "hsl(var(--danger))",
                        _ => "hsl(var(--foreground))"
                    };
                }
                <div style="margin-bottom: 1rem;">
                    <span class="badge-status" style="background: @statusBg; color: @statusColor; border-color: @statusColor; padding: 0.5rem 1rem; border-radius: 8px; font-weight: 600;">@statusText</span>
                </div>

                <!-- Status Update Form -->
                <form asp-action="UpdateStatus" method="post" style="margin-bottom: 1rem;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <label class="luxe-label" style="margin-bottom: 0.5rem; display: block;">Status wijzigen</label>
                    <select name="status" class="luxe-control luxe-select w-100" style="margin-bottom: 0.5rem;">
                        <option value="Pending" selected="@(Model.Status == "Pending")">In behandeling</option>
                        <option value="Processing" selected="@(Model.Status == "Processing")">Wordt verwerkt</option>
                        <option value="Shipped" selected="@(Model.Status == "Shipped")">Verzonden</option>
                        <option value="Delivered" selected="@(Model.Status == "Delivered")">Afgeleverd</option>
                        <option value="Completed" selected="@(Model.Status == "Completed")">Voltooid</option>
                        <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Geannuleerd</option>
                        <option value="Failed" selected="@(Model.Status == "Failed")">Mislukt</option>
                    </select>
                    <button class="btn-luxe w-100" type="submit">Status updaten</button>
                    <div style="font-size: 0.875rem; color: hsl(var(--muted-foreground)); margin-top: 0.5rem;">
                        ℹ️ Status wordt ook geüpdatet in Salesforce
                    </div>
                </form>

                <div style="color:hsl(var(--muted-foreground));">Order Number</div>
                <div style="font-weight:700; margin-bottom: 0.75rem; font-family: monospace; font-size: 0.9rem;">@Model.OrderId</div>

                <div style="color:hsl(var(--muted-foreground));">Totaal Bedrag</div>
                <div style="font-weight:700; margin-bottom: 0.75rem;">€@Model.TotalPrice.ToString("0.00")</div>

                <div style="color:hsl(var(--muted-foreground));">Aantal Items</div>
                <div style="font-weight:700; margin-bottom: 0.75rem;">@Model.TotalQuantity items</div>

                <div style="color:hsl(var(--muted-foreground));">Aantal Producten</div>
                <div style="font-weight:700; margin-bottom: 0.75rem;">@(Model.Items?.Count ?? 0) verschillende producten</div>

                <div style="color:hsl(var(--muted-foreground));">RabbitMQ</div>
                @if (Model.IsSentToQueue)
                {
                    <div style="font-weight:700; margin-bottom: 0.75rem; color:hsl(var(--primary));">Verstuurd</div>
                    @if (Model.SentToQueueAt.HasValue)
                    {
                        <div style="color:hsl(var(--muted-foreground)); font-size:0.95rem;">@Model.SentToQueueAt.Value.ToString("yyyy-MM-dd HH:mm")</div>
                    }
                }
                else
                {
                    <div style="font-weight:700; margin-bottom: 0.75rem;">Niet verstuurd</div>
                    <form asp-action="Send" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn-luxe w-100" type="submit">Naar RabbitMQ sturen</button>
                    </form>
                }

                <div class="d-flex gap-2 mt-3">
                    <a class="btn-luxe-outline" asp-action="Index" style="flex:1;">Terug</a>
                    <a class="btn-luxe-outline" asp-controller="Admin" asp-action="Index" style="flex:1;">Admin</a>
                </div>
            </div>

            <div class="p-4 mt-3" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
                <div style="font-weight:700; margin-bottom: 0.75rem;">Leveradres</div>
                <div style="color:hsl(var(--muted-foreground));">
                    @(Model.ShippingAddress?.ShippingAddress ?? "-")<br />
                    @(Model.ShippingAddress?.ShippingPostalCode ?? "") @(Model.ShippingAddress?.ShippingCity ?? "")<br />
                    @(Model.ShippingAddress?.ShippingCountry ?? "")
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="p-4" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
                <div style="font-weight:700; margin-bottom: 0.75rem;">Order Samenvatting</div>
                <div style="background: hsl(var(--muted) / 0.3); padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; font-size: 0.9rem; line-height: 1.6;">
                    <div style="margin-bottom: 0.5rem;"><strong>Klant:</strong> @Model.UserName (@Model.UserEmail)</div>
                    <div style="margin-bottom: 0.5rem;"><strong>Status:</strong> @Model.Status</div>
                    <div style="margin-bottom: 0.5rem;"><strong>Totaal:</strong> €@Model.TotalPrice.ToString("0.00") (@Model.TotalQuantity items)</div>
                    <div style="margin-bottom: 0.5rem;"><strong>Verzendadres:</strong> @(Model.ShippingAddress?.ShippingAddress ?? "-"), @(Model.ShippingAddress?.ShippingPostalCode ?? "") @(Model.ShippingAddress?.ShippingCity ?? ""), @(Model.ShippingAddress?.ShippingCountry ?? "")</div>
                    <div style="margin-bottom: 0.5rem;"><strong>Order Datum:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</div>
                    @if (Model.IsSentToQueue && Model.SentToQueueAt.HasValue)
                    {
                        <div><strong>Verstuurd naar RabbitMQ:</strong> @Model.SentToQueueAt.Value.ToString("yyyy-MM-dd HH:mm")</div>
                    }
                </div>

                <div style="font-weight:700; margin-bottom: 0.75rem;">Items</div>

                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Maat/Kleur</th>
                                <th>Aantal</th>
                                <th>Prijs</th>
                                <th>Subtotaal</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var i in (Model.Items ?? new List<AdminOrderItemViewModel>()))
                        {
                            <tr>
                                <td>
                                    <div style="font-weight:700;">@i.Brand @i.ProductName</div>
                                    @if (i.CurrentProduct?.PriceChanged == true)
                                    {
                                        <div style="font-size:0.9rem; color:hsl(var(--muted-foreground));">Prijs veranderd (huidig: €@i.CurrentProduct.CurrentPrice.ToString("0.00"))</div>
                                    }
                                </td>
                                <td>@i.Size / @i.Color</td>
                                <td>@i.Quantity</td>
                                <td>€@i.PriceAtOrder.ToString("0.00")</td>
                                <td>€@i.SubTotal.ToString("0.00")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="mt-3" style="color:hsl(var(--muted-foreground));">
                        <div style="font-weight:700; color:hsl(var(--foreground));">Notities</div>
                        <div>@Model.Notes</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

