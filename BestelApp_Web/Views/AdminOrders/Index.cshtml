@using BestelApp_Web.Controllers
@model List<AdminOrderListItemViewModel>

@{
    ViewData["Title"] = "Bestellingen (Admin)";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Beheer</div>
        <h1 class="catalog-title">Bestellingen</h1>
        <p class="catalog-subtitle">Alle orders vanuit de Backend API. Je ziet ook of ze naar RabbitMQ verstuurd zijn.</p>
    </div>

    <div class="p-4" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Klant</th>
                            <th>Datum</th>
                            <th>Status</th>
                            <th>Items</th>
                            <th>Totaal</th>
                            <th>Queue</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var o in Model.OrderByDescending(x => x.OrderDate))
                    {
                        <tr>
                            <td style="font-weight:700;">@o.OrderId</td>
                            <td>
                                <div>@o.UserName</div>
                                <div style="font-size:0.9rem; color:hsl(var(--muted-foreground));">@o.UserEmail</div>
                            </td>
                            <td>@o.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@o.Status</td>
                            <td>@o.ItemCount</td>
                            <td>â‚¬@o.TotalPrice.ToString("0.00")</td>
                            <td>
                                @if (o.IsSentToQueue)
                                {
                                    <span style="color:hsl(var(--primary)); font-weight:600;">Verstuurd</span>
                                }
                                else
                                {
                                    <span style="color:hsl(var(--muted-foreground));">Niet</span>
                                }
                            </td>
                            <td>
                                <a class="btn-luxe-outline" asp-action="Details" asp-route-id="@o.Id">Details</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center p-5">
                <h3 style="font-family:'Playfair Display', serif;">Geen bestellingen</h3>
                <p style="color:hsl(var(--muted-foreground)); margin:0;">Er zijn nog geen orders, of de API gaf geen data terug.</p>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end mt-3">
        <a class="btn-luxe-outline" asp-controller="Admin" asp-action="Index">Terug naar Admin</a>
    </div>
</div>

