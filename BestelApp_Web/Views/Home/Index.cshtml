@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-3 fw-bold">Welkom bij BestelApp</h1>
    <p class="lead mb-4">
        Bestel je favoriete schoenen en zie ze automatisch in Salesforce verschijnen!
    </p>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Gebruiker is ingelogd -->
        <div class="alert alert-success d-inline-block" role="alert">
            <h5 class="mb-0">👋 Hoi @User.Identity.Name! Je bent ingelogd.</h5>
        </div>
        <div class="mt-4">
            <a asp-controller="Shoes" asp-action="Index" class="btn btn-primary btn-lg me-2">
                🛍️ Bekijk Schoenen
            </a>
            <a asp-controller="Shoes" asp-action="Create" class="btn btn-success btn-lg">
                ➕ Nieuwe Bestelling
            </a>
        </div>
    }
    else
    {
        <!-- Gebruiker is NIET ingelogd -->
        <div class="alert alert-info d-inline-block" role="alert">
            <h5 class="mb-0">Nieuwe gebruiker? Maak een account aan om te beginnen!</h5>
        </div>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">
                📝 Registreren
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                🔑 Inloggen
            </a>
        </div>
        <div class="mt-4">
            <p class="text-muted">
                Of bekijk de schoenen zonder in te loggen:
                <a asp-controller="Shoes" asp-action="Index">Ga naar schoenen</a>
            </p>
        </div>
    }
</div>

<!-- Features sectie -->
<div class="row mt-5 text-center">
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h3>🐰 RabbitMQ</h3>
                <p>Bestellingen worden via RabbitMQ verwerkt voor betrouwbare message delivery.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h3>☁️ Salesforce</h3>
                <p>Automatische synchronisatie met Salesforce voor real-time order tracking.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h3>🔐 Identity</h3>
                <p>Veilige authenticatie en autorisatie met ASP.NET Core Identity.</p>
            </div>
        </div>
    </div>
</div>
