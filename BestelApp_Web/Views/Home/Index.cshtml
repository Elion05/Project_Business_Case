@{
    ViewData["Title"] = "Home";
}

<style>
    .feature-card {
        background: hsl(var(--card));
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid hsl(var(--border));
        box-shadow: var(--shadow-soft);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-hover);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: hsl(var(--foreground));
        margin-bottom: 0.75rem;
    }

    .feature-text {
        color: hsl(var(--muted-foreground));
        line-height: 1.6;
    }
</style>

<!-- Hero (premium, leesbaar) -->
<div class="container" style="padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 2rem;">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="catalog-kicker">Welkom</div>
            <h1 class="catalog-title">Welkom terug, @User.Identity.Name!</h1>
            <p class="catalog-subtitle">Ontdek onze nieuwste schoenen collectie.</p>
            <div class="d-flex justify-content-center gap-2 flex-wrap mt-4">
                <a asp-controller="Shoes" asp-action="Index" class="btn-luxe">Bekijk schoenen</a>
                <a asp-controller="Favorites" asp-action="Index" class="btn-luxe-outline">Mijn favorieten</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn-luxe-outline">Admin</a>
                }
            </div>
        }
        else
        {
            <div class="catalog-kicker">BestelApp</div>
            <h1 class="catalog-title">Welkom bij BestelApp</h1>
            <p class="catalog-subtitle">Bestel schoenen en volg de verwerking via RabbitMQ & Salesforce.</p>
            <div class="d-flex justify-content-center gap-2 flex-wrap mt-4">
                <a asp-controller="Account" asp-action="Register" class="btn-luxe">Registreren</a>
                <a asp-controller="Account" asp-action="Login" class="btn-luxe-outline">Inloggen</a>
                <a asp-controller="Shoes" asp-action="Index" class="btn-luxe-outline">Schoenen bekijken</a>
            </div>
        }
    </div>
</div>

<!-- Features Section -->
<div class="container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">🐰</div>
                <h3 class="feature-title">RabbitMQ</h3>
                <p class="feature-text">
                    Bestellingen worden via RabbitMQ verwerkt voor betrouwbare message delivery en real-time order processing.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">☁️</div>
                <h3 class="feature-title">Salesforce</h3>
                <p class="feature-text">
                    Automatische synchronisatie met Salesforce voor real-time order tracking en klantbeheer.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">🔐</div>
                <h3 class="feature-title">Veilige Authenticatie</h3>
                <p class="feature-text">
                    Veilige authenticatie en autorisatie met ASP.NET Core Identity voor een betrouwbare gebruikerservaring.
                </p>
            </div>
        </div>
    </div>
</div>
