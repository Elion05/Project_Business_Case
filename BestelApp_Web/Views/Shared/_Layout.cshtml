<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BestelApp_Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BestelApp_Web.styles.css" asp-append-version="true" />
    <!-- Lucide icons (premium icon set) -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <!-- API Base URL vanuit configuratie -->
    @inject IConfiguration Configuration
    <script>
        // Globale API URL variabele (vanuit appsettings.json)
        window.API_BASE_URL = '@Configuration["BackendApi:BaseUrl"]' || 'https://localhost:7001';
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg luxe-navbar">
            <div class="container-fluid px-3 px-lg-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    BestelApp
                </a>

                <!-- Acties altijd zichtbaar (ook mobiel) -->
                <div class="d-flex align-items-center gap-2 ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="luxe-icon-btn position-relative" asp-controller="Favorites" asp-action="Index" title="Favorieten">
                            <i data-lucide="heart" style="width:18px;height:18px;"></i>
                        </a>

                        <a id="cart-link" class="luxe-icon-btn position-relative" asp-controller="Cart" asp-action="Index" title="Winkelwagen">
                            <i data-lucide="shopping-bag" style="width:18px;height:18px;"></i>
                            <span id="cart-badge" class="badge-dot" style="display:none;" aria-hidden="true"></span>
                        </a>
                    }

                    <partial name="_LoginPartial" />

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn-luxe-outline ms-1" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                    }

                    <button class="navbar-toggler ms-1" type="button" data-bs-toggle="collapse" data-bs-target="#luxeNavbarCollapse" aria-controls="luxeNavbarCollapse"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="luxeNavbarCollapse">
                    <ul class="navbar-nav flex-grow-1 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shoes" asp-action="Index">Schoenen</a>
                        </li>
                    </ul>

                    <!-- Zoekbalk zit in de Shoes filter bar (niet dubbel in navbar) -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container luxe-page">
        <main role="main" class="pb-3">
            <!-- Succes berichten -->
            @if (TempData["SuccessBericht"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <strong>✓</strong> @TempData["SuccessBericht"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Fout berichten -->
            @if (TempData["FoutBericht"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <strong>✗</strong> @TempData["FoutBericht"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BestelApp_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
