<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BestelApp_Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BestelApp_Web.styles.css" asp-append-version="true" />
    <!-- Lucide icons (premium icon set) -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg luxe-navbar">
            <div class="container-fluid px-3 px-lg-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    BestelApp
                </a>

                <!-- Acties altijd zichtbaar (ook mobiel) -->
                <div class="d-flex align-items-center gap-2 ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="luxe-icon-btn position-relative" asp-controller="Favorites" asp-action="Index" title="Favorieten">
                            <i data-lucide="heart" style="width:18px;height:18px;"></i>
                        </a>

                        <a id="cart-link" class="luxe-icon-btn position-relative" asp-controller="Cart" asp-action="Index" title="Winkelwagen">
                            <i data-lucide="shopping-bag" style="width:18px;height:18px;"></i>
                            <span id="cart-badge" class="badge-dot" style="display:none;" aria-hidden="true"></span>
                        </a>
                    }

                    <partial name="_LoginPartial" />

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn-luxe-outline ms-1" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                    }

                    <button class="navbar-toggler ms-1" type="button" data-bs-toggle="collapse" data-bs-target="#luxeNavbarCollapse" aria-controls="luxeNavbarCollapse"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="luxeNavbarCollapse">
                    <ul class="navbar-nav flex-grow-1 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shoes" asp-action="Index">Schoenen</a>
                        </li>
                        
                        <!-- Categorieën Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorieën
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" id="categoriesDropdown">
                                <li><a class="dropdown-item" asp-controller="Shoes" asp-action="Index">Alle Schoenen</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <!-- Kategoriler JavaScript ile gelir -->
                            </ul>
                        </li>
                    </ul>

                    <!-- Zoekbalk zit in de Shoes filter bar (niet dubbel in navbar) -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container luxe-page">
        <main role="main" class="pb-3">
            <!-- Succes berichten -->
            @if (TempData["SuccessBericht"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <strong>✓</strong> @TempData["SuccessBericht"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Fout berichten -->
            @if (TempData["FoutBericht"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <strong>✗</strong> @TempData["FoutBericht"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BestelApp_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Laad categorieën in navbar -->
    <script>
        // Laad categorieën wanneer pagina geladen is
        document.addEventListener('DOMContentLoaded', function() {
            laadCategorieen();
        });

        async function laadCategorieen() {
            try {
                const response = await fetch('https://localhost:7001/api/category');
                if (response.ok) {
                    const categorieen = await response.json();
                    const dropdown = document.getElementById('categoriesDropdown');
                    
                    // Voeg categorieën toe aan dropdown
                    categorieen.forEach(cat => {
                        const li = document.createElement('li');
                        const a = document.createElement('a');
                        a.className = 'dropdown-item';
                        a.href = '/Shoes?categoryId=' + cat.id;
                        a.textContent = cat.name + ' (' + cat.productCount + ')';
                        li.appendChild(a);
                        dropdown.appendChild(li);
                    });
                }
            } catch (error) {
                console.error('Fout bij laden categorieën:', error);
            }
        }

        // Laad cart count als user ingelogd is
        @if (User.Identity?.IsAuthenticated == true)
        {
            <text>
            // Als er net iets is toegevoegd, laten we de badge even pulsen
            @if (TempData["CartPulse"] != null)
            {
                <text>sessionStorage.setItem('cart_pulse', '1');</text>
            }

            async function laadCartCount() {
                try {
                    const response = await fetch('https://localhost:7001/api/cart', {
                        credentials: 'include'
                    });
                    if (response.ok) {
                        const cart = await response.json();
                        const cartBadgeEl = document.getElementById('cart-badge');
                        const cartLinkEl = document.getElementById('cart-link');

                        const totalItems = cart?.totalItems ?? 0;
                        const vorige = parseInt(sessionStorage.getItem('cart_prev_count') || '0');
                        sessionStorage.setItem('cart_prev_count', totalItems.toString());

                        if (cartLinkEl) {
                            cartLinkEl.title = totalItems > 0 ? `Winkelwagen (${totalItems})` : 'Winkelwagen';
                        }

                        if (cartBadgeEl && totalItems > 0) {
                            cartBadgeEl.style.display = 'inline';

                            // Pulse als count stijgt OF als CartPulse flag gezet is
                            const forcePulse = sessionStorage.getItem('cart_pulse') === '1';
                            if (forcePulse || totalItems > vorige) {
                                cartBadgeEl.classList.remove('is-pulse');
                                // reflow om animatie opnieuw te starten
                                void cartBadgeEl.offsetWidth;
                                cartBadgeEl.classList.add('is-pulse');
                                sessionStorage.removeItem('cart_pulse');
                            }
                        } else if (cartBadgeEl) {
                            cartBadgeEl.style.display = 'none';
                        }
                    }
                } catch (error) {
                    console.error('Fout bij laden cart count:', error);
                }
            }
            laadCartCount();
            </text>
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
