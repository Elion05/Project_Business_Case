@model List<OrderViewModel>

@{
    ViewData["Title"] = "Mijn Bestellingen";
}

<div class="container" style="padding-top: var(--spacing-2xl); max-width: 1200px;">
    <div class="catalog-hero" style="margin-bottom: var(--spacing-2xl);">
        <div class="catalog-kicker">Bestellingen</div>
        <h1 class="catalog-title">Mijn Bestellingen</h1>
        <p class="catalog-subtitle">Overzicht van al je bestellingen en hun status.</p>
    </div>
</div>

<div class="container" style="max-width: 1200px;">
    @if (Model != null && Model.Any())
    {
        <div style="display: grid; grid-template-columns: 1fr; gap: 1.5rem;">
            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
            {
                <div class="card-luxe p-4 shadow-hover">
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid hsl(var(--border));">
                        <div>
                            <div style="font-weight: 700; color: hsl(var(--foreground)); font-size: 1.1rem; font-family: 'Playfair Display', serif; margin-bottom: 0.5rem;">
                                Bestelling #@order.OrderId
                            </div>
                            <div style="font-size: 0.9rem; color: hsl(var(--muted-foreground));">
                                @order.OrderDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("nl-NL"))
                            </div>
                        </div>
                        <div>
                            @{
                                var statusText = order.Status.ToLower() switch
                                {
                                    "pending" => "In behandeling",
                                    "processing" => "Wordt verwerkt",
                                    "completed" => "Voltooid",
                                    "failed" => "Mislukt",
                                    _ => order.Status
                                };
                                var statusBg = order.Status.ToLower() switch
                                {
                                    "pending" => "hsl(41 52% 90%)",
                                    "processing" => "hsl(200 60% 90%)",
                                    "completed" => "hsl(120 40% 90%)",
                                    "failed" => "hsl(var(--danger) / 0.1)",
                                    _ => "hsl(var(--muted))"
                                };
                                var statusColor = order.Status.ToLower() switch
                                {
                                    "pending" => "hsl(41 52% 40%)",
                                    "processing" => "hsl(200 60% 30%)",
                                    "completed" => "hsl(120 40% 30%)",
                                    "failed" => "hsl(var(--danger))",
                                    _ => "hsl(var(--foreground))"
                                };
                            }
                            <span class="badge-status" style="background: @statusBg; color: @statusColor; border-color: @statusColor;">@statusText</span>
                        </div>
                    </div>

                    <div style="margin-bottom: 1rem;">
                        @if (!string.IsNullOrEmpty(order.ShippingAddress))
                        {
                            <div style="font-size: 0.9rem; color: hsl(var(--muted-foreground)); margin-bottom: 0.5rem;">
                                <strong style="color: hsl(var(--foreground));">Leveradres:</strong> @order.ShippingAddress, @order.ShippingPostalCode @order.ShippingCity, @order.ShippingCountry
                            </div>
                        }
                        @if (order.Items != null && order.Items.Any())
                        {
                            <div style="font-size: 0.9rem; color: hsl(var(--muted-foreground));">
                                <strong style="color: hsl(var(--foreground));">Aantal items:</strong> @order.Items.Sum(i => i.Quantity)
                            </div>
                        }
                    </div>

                    <div style="font-size: 1.5rem; font-weight: 700; color: hsl(var(--primary)); text-align: right; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid hsl(var(--border)); font-family: 'Playfair Display', serif;">
                        Totaal: â‚¬@order.TotalPrice.ToString("0.00")
                    </div>

                    @if (order.Items != null && order.Items.Any())
                    {
                        <button class="btn-luxe-ghost w-100 mt-3" onclick="toggleItems('order-@order.Id')">
                            <i data-lucide="chevron-down" id="icon-order-@order.Id" style="width:16px;height:16px;"></i> Toon items (@order.Items.Count)
                        </button>
                        
                        <div id="order-@order.Id" style="display: none; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid hsl(var(--border));">
                            <div style="font-weight: 600; color: hsl(var(--foreground)); margin-bottom: 0.75rem; font-size: 0.95rem;">Bestelde items:</div>
                            @foreach (var item in order.Items)
                            {
                                <div style="display: flex; align-items: center; padding: 0.75rem; margin-bottom: 0.5rem; background: hsl(var(--muted)); border-radius: var(--radius-md);">
                                    <div style="flex: 1; font-size: 0.875rem;">
                                        <div style="font-weight: 600; color: hsl(var(--foreground));">@item.ProductBrand @item.ProductName</div>
                                        <div style="color: hsl(var(--muted-foreground)); font-size: 0.8rem;">
                                            Maat: @item.Size | Kleur: @item.Color | Aantal: @item.Quantity
                                        </div>
                                    </div>
                                    <div style="font-weight: 600; color: hsl(var(--foreground));">
                                        â‚¬@((item.Quantity * item.Price).ToString("0.00"))
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="card-luxe p-5 text-center">
            <div style="font-size: 5rem; margin-bottom: 1rem; color: hsl(var(--muted-foreground));">ðŸ“¦</div>
            <h3 style="font-family: 'Playfair Display', serif; color: hsl(var(--foreground)); margin-bottom: 0.75rem;">Nog geen bestellingen</h3>
            <p style="color: hsl(var(--muted-foreground)); margin-bottom: 1.5rem;">Je hebt nog geen bestellingen geplaatst.</p>
            <a asp-controller="Shoes" asp-action="Index" class="btn-luxe">Bekijk Schoenen</a>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn-luxe-outline">
            Terug naar Profiel
        </a>
    </div>
</div>

<script>
    function toggleItems(orderId) {
        const itemsDiv = document.getElementById(orderId);
        const icon = document.getElementById('icon-' + orderId);
        if (itemsDiv.style.display === 'none') {
            itemsDiv.style.display = 'block';
            if (icon) icon.style.transform = 'rotate(180deg)';
        } else {
            itemsDiv.style.display = 'none';
            if (icon) icon.style.transform = 'rotate(0deg)';
        }
    }
</script>
