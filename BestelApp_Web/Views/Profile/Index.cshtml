@model ProfileViewModel

@{
    ViewData["Title"] = "Mijn Profiel";
}

<div class="container" style="padding-top: var(--spacing-2xl); max-width: 900px;">
    <div class="catalog-hero" style="margin-bottom: var(--spacing-2xl);">
        <div class="catalog-kicker">Account</div>
        <h1 class="catalog-title">Mijn Profiel</h1>
        <p class="catalog-subtitle">Beheer je persoonlijke gegevens en adresgegevens.</p>
    </div>
</div>

<div class="container" style="max-width: 900px;">
    <form asp-action="UpdateProfile" method="post">
        <!-- Persoonlijke Gegevens -->
        <div class="card-luxe p-4 mb-4">
            <h2 style="font-family: 'Playfair Display', serif; font-size: 1.75rem; font-weight: 700; color: hsl(var(--foreground)); margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid hsl(var(--border));">
                Persoonlijke Gegevens
            </h2>

            <div style="background: hsl(var(--muted)); border-left: 4px solid hsl(var(--primary)); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1.5rem; font-size: 0.875rem; color: hsl(var(--muted-foreground));">
                Je e-mailadres kan niet worden gewijzigd. Neem contact op met support als je je e-mail wilt aanpassen.
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="luxe-label">Voornaam *</label>
                    <input type="text" 
                           class="luxe-control w-100" 
                           name="FirstName" 
                           value="@Model.FirstName" 
                           required />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="luxe-label">Achternaam *</label>
                    <input type="text" 
                           class="luxe-control w-100" 
                           name="LastName" 
                           value="@Model.LastName" 
                           required />
                </div>
            </div>

            <div class="mb-3">
                <label class="luxe-label">E-mailadres</label>
                <input type="email" 
                       class="luxe-control w-100" 
                       value="@Model.Email" 
                       readonly 
                       style="background: hsl(var(--muted));" />
            </div>

            <div class="mb-3">
                <label class="luxe-label">Telefoonnummer</label>
                <input type="tel" 
                       class="luxe-control w-100" 
                       name="PhoneNumber" 
                       value="@Model.PhoneNumber" 
                       placeholder="+31 6 12345678" />
            </div>
        </div>

        <!-- Adresgegevens -->
        <div class="card-luxe p-4 mb-4">
            <h2 style="font-family: 'Playfair Display', serif; font-size: 1.75rem; font-weight: 700; color: hsl(var(--foreground)); margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid hsl(var(--border));">
                Adresgegevens
            </h2>

            <div style="background: hsl(var(--muted)); border-left: 4px solid hsl(var(--primary)); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1.5rem; font-size: 0.875rem; color: hsl(var(--muted-foreground));">
                Dit adres wordt gebruikt als standaard leveradres bij het afrekenen.
            </div>

            <div class="mb-3">
                <label class="luxe-label">Adres</label>
                <input type="text" 
                       class="luxe-control w-100" 
                       name="Address" 
                       value="@Model.Address" 
                       placeholder="Straat en huisnummer" />
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="luxe-label">Postcode</label>
                    <input type="text" 
                           class="luxe-control w-100" 
                           name="PostalCode" 
                           value="@Model.PostalCode" 
                           placeholder="1000 AB" />
                </div>
                <div class="col-md-8 mb-3">
                    <label class="luxe-label">Plaats</label>
                    <input type="text" 
                           class="luxe-control w-100" 
                           name="City" 
                           value="@Model.City" 
                           placeholder="Amsterdam" />
                </div>
            </div>

            <div class="mb-3">
                <label class="luxe-label">Land</label>
                <select class="luxe-control luxe-select w-100" name="Country">
                    <option value="">Selecteer land</option>
                    <option value="Nederland" selected="@(Model.Country == "Nederland" ? "selected" : null)">Nederland</option>
                    <option value="België" selected="@(Model.Country == "België" ? "selected" : null)">België</option>
                    <option value="Duitsland" selected="@(Model.Country == "Duitsland" ? "selected" : null)">Duitsland</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn-luxe w-100 mb-4">
            Profiel Bijwerken
        </button>
    </form>

    <div class="text-center">
        <a asp-action="Orders" class="btn-luxe-outline">
            Bekijk Mijn Bestellingen
        </a>
    </div>
</div>
