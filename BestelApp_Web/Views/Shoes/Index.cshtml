@model IEnumerable<BestelApp_Models.Shoe>

@{
    ViewData["Title"] = "Schoenen Overzicht";
}

<h1 class="display-4 mb-4 text-primary">Schoenen Overzicht</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nieuwe Schoen Toevoegen
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Brand)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Size)</th>
                <th>@Html.DisplayNameFor(model => model.Color)</th>
                <th>Bestellen</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                <td>€ @item.Price.ToString("0.00")</td>
                <td>@Html.DisplayFor(modelItem => item.Size)</td>
                <td>
                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Color)</span>
                </td>
                <td>
                    <form asp-action="Order" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="bi bi-cart-plus"></i> Bestel
                        </button>
                    </form>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Bewerken">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Verwijderen">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
