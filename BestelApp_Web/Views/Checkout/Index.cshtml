@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .checkout-wrap {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem 2rem;
    }

    .checkout-card-title {
        font-family: 'Inter', sans-serif;
        font-size: 0.85rem;
        letter-spacing: 0.16em;
        text-transform: uppercase;
        color: hsl(var(--muted-foreground));
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .order-summary-item {
        display: flex;
        gap: 12px;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid hsl(var(--border));
    }

    .order-item-image {
        width: 64px;
        height: 64px;
        border-radius: 14px;
        object-fit: cover;
        border: 1px solid hsl(var(--border));
        background: hsl(var(--muted));
    }

    .order-item-name {
        font-weight: 800;
        color: hsl(var(--foreground));
        margin-bottom: 2px;
    }

    .order-item-details {
        font-size: 0.9rem;
        color: hsl(var(--muted-foreground));
    }

    .order-item-price {
        font-weight: 800;
        color: hsl(var(--foreground));
        white-space: nowrap;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid hsl(var(--border));
        color: hsl(var(--muted-foreground));
    }

    .summary-row.total {
        border-bottom: none;
        border-top: 1px solid hsl(var(--border));
        margin-top: 12px;
        padding-top: 12px;
        font-size: 1.15rem;
        font-weight: 900;
        color: hsl(var(--foreground));
    }

    .secure-badge {
        text-align: center;
        color: hsl(var(--muted-foreground));
        font-size: 0.9rem;
        margin-top: 12px;
    }
</style>

<div class="container" style="padding-top: var(--space-32); max-width: 1100px;">
    <div class="catalog-hero" style="margin-bottom: var(--space-24);">
        <div class="catalog-kicker">Laatste stap</div>
        <h1 class="catalog-title">Checkout</h1>
        <p class="catalog-subtitle">Controleer je levering en rond je bestelling rustig af.</p>
    </div>
</div>

<div class="checkout-wrap">
    <form asp-action="PlaceOrder" method="post">
        <div class="row">
            <!-- Links: Adresgegevens -->
            <div class="col-lg-7">
                <div class="card-luxe p-4">
                    <div class="checkout-card-title">Leveradres</div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="luxe-label">Voornaam</label>
                            <input type="text" class="luxe-control w-100" value="@Model.FirstName" readonly />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="luxe-label">Achternaam</label>
                            <input type="text" class="luxe-control w-100" value="@Model.LastName" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="luxe-label">Adres *</label>
                        <input type="text" 
                               class="luxe-control w-100" 
                               name="Address" 
                               value="@Model.Address" 
                               placeholder="Straat en huisnummer"
                               required />
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="luxe-label">Postcode *</label>
                            <input type="text" 
                                   class="luxe-control w-100" 
                                   name="PostalCode" 
                                   value="@Model.PostalCode" 
                                   placeholder="1000 AB"
                                   required />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label class="luxe-label">Plaats *</label>
                            <input type="text" 
                                   class="luxe-control w-100" 
                                   name="City" 
                                   value="@Model.City" 
                                   placeholder="Amsterdam"
                                   required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="luxe-label">Land *</label>
                        <select class="luxe-control w-100" name="Country" required>
                            <option value="">Selecteer land</option>
                            <option value="Nederland" selected="@(Model.Country == "Nederland" ? "selected" : null)">Nederland</option>
                            <option value="BelgiÃ«" selected="@(Model.Country == "BelgiÃ«" ? "selected" : null)">BelgiÃ«</option>
                            <option value="Duitsland" selected="@(Model.Country == "Duitsland" ? "selected" : null)">Duitsland</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="luxe-label">E-mail</label>
                        <input type="email" class="luxe-control w-100" value="@Model.Email" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="luxe-label">Telefoonnummer</label>
                        <input type="tel" class="luxe-control w-100" value="@Model.PhoneNumber" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="luxe-label">Opmerkingen (optioneel)</label>
                        <textarea class="luxe-control w-100" style="height:auto; padding-top: 12px; padding-bottom: 12px;"
                                  name="Notes" 
                                  rows="3" 
                                  placeholder="Bijv. bezorginstructies"></textarea>
                    </div>
                </div>
            </div>

            <!-- Rechts: Bestelling Overzicht -->
            <div class="col-lg-5">
                <div class="card-luxe p-4">
                    <div class="checkout-card-title">Bestelling</div>

                    @if (Model.Cart != null && Model.Cart.Items != null)
                    {
                        foreach (var item in Model.Cart.Items)
                        {
                            <div class="order-summary-item">
                                <img src="@(item.ShoeVariant.Shoe.ImageUrl ?? "/images/placeholder.png")" 
                                     alt="@item.ShoeVariant.Shoe.Name" 
                                     class="order-item-image"
                                     onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2260%22 height=%2260%22%3E%3Crect fill=%22%23f8f9fa%22 width=%2260%22 height=%2260%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 font-size=%2220%22%3EðŸ‘Ÿ%3C/text%3E%3C/svg%3E'" />
                                
                                <div style="flex:1;">
                                    <div class="order-item-name">@item.ShoeVariant.Shoe.Name</div>
                                    <div class="order-item-details">Maat @item.ShoeVariant.Size Â· @item.ShoeVariant.Color Â· Aantal @item.Quantity</div>
                                </div>
                                
                                <div class="order-item-price">
                                    â‚¬@((item.Quantity * item.Price).ToString("0.00"))
                                </div>
                            </div>
                        }

                        <div class="mt-3">
                            <div class="summary-row">
                                <span>Subtotaal:</span>
                                <span>â‚¬@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                            <div class="summary-row">
                                <span>Verzendkosten:</span>
                                <span>Gratis</span>
                            </div>
                            <div class="summary-row total">
                                <span>Totaal:</span>
                                <span>â‚¬@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                        </div>

                        <button type="submit" class="btn-luxe w-100 mt-3">
                            Bestelling plaatsen
                        </button>

                        <div class="secure-badge">
                            ðŸ”’ Veilige en versleutelde verbinding
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Je winkelwagen is leeg</p>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
