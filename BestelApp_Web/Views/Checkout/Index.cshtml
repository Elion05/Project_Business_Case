@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .checkout-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .page-header {
        background: var(--gradient-hero);
        color: hsl(var(--primary-foreground));
        padding: 2rem 0;
        margin-bottom: 2rem;
    }

    @@media (min-width: 768px) {
        .page-header {
            padding: 3rem 0;
        }
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    @@media (min-width: 768px) {
        .section-title {
            font-size: 2.5rem;
        }
    }

    .checkout-card {
        background: hsl(var(--card));
        border-radius: 12px;
        padding: 2rem;
        box-shadow: var(--shadow-card);
        margin-bottom: 2rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e9ecef;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.75rem;
    }

    .form-control:focus {
        border-color: #ff6b35;
        box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
    }

    .order-summary-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
    }

    .order-item-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        margin-right: 1rem;
    }

    .order-item-info {
        flex: 1;
    }

    .order-item-name {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.25rem;
    }

    .order-item-details {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .order-item-price {
        font-weight: 600;
        color: #2c3e50;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
    }

    .summary-row.total {
        border-top: 2px solid #2c3e50;
        margin-top: 1rem;
        padding-top: 1rem;
        font-size: 1.25rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .place-order-btn {
        width: 100%;
        padding: 1rem;
        background: hsl(var(--accent));
        color: hsl(var(--accent-foreground));
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.3s ease;
        margin-top: 1.5rem;
    }

    .place-order-btn:hover {
        background: hsl(var(--accent-dark));
    }

    .secure-badge {
        text-align: center;
        color: #6c757d;
        font-size: 0.875rem;
        margin-top: 1rem;
    }
</style>

<!-- Header -->
<div class="page-header">
    <div class="container">
        <div class="section-title">üõí Checkout</div>
        <p class="mb-0">Vul je gegevens in om de bestelling af te ronden</p>
    </div>
</div>

<div class="checkout-container">
    <form asp-action="PlaceOrder" method="post">
        <div class="row">
            <!-- Links: Adresgegevens -->
            <div class="col-lg-7">
                <div class="checkout-card">
                    <h2 class="card-title">üìç Leveradres</h2>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Voornaam</label>
                            <input type="text" class="form-control" value="@Model.FirstName" readonly />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Achternaam</label>
                            <input type="text" class="form-control" value="@Model.LastName" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Adres *</label>
                        <input type="text" 
                               class="form-control" 
                               name="Address" 
                               value="@Model.Address" 
                               placeholder="Straat en huisnummer"
                               required />
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Postcode *</label>
                            <input type="text" 
                                   class="form-control" 
                                   name="PostalCode" 
                                   value="@Model.PostalCode" 
                                   placeholder="1000 AB"
                                   required />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Plaats *</label>
                            <input type="text" 
                                   class="form-control" 
                                   name="City" 
                                   value="@Model.City" 
                                   placeholder="Amsterdam"
                                   required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Land *</label>
                        <select class="form-control" name="Country" required>
                            <option value="">Selecteer land</option>
                            <option value="Nederland" selected="@(Model.Country == "Nederland" ? "selected" : null)">Nederland</option>
                            <option value="Belgi√´" selected="@(Model.Country == "Belgi√´" ? "selected" : null)">Belgi√´</option>
                            <option value="Duitsland" selected="@(Model.Country == "Duitsland" ? "selected" : null)">Duitsland</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-mail</label>
                        <input type="email" class="form-control" value="@Model.Email" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Telefoonnummer</label>
                        <input type="tel" class="form-control" value="@Model.PhoneNumber" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Opmerkingen (optioneel)</label>
                        <textarea class="form-control" 
                                  name="Notes" 
                                  rows="3" 
                                  placeholder="Bijv. bezorginstructies"></textarea>
                    </div>
                </div>
            </div>

            <!-- Rechts: Bestelling Overzicht -->
            <div class="col-lg-5">
                <div class="checkout-card">
                    <h2 class="card-title">üì¶ Bestelling Overzicht</h2>

                    @if (Model.Cart != null && Model.Cart.Items != null)
                    {
                        foreach (var item in Model.Cart.Items)
                        {
                            <div class="order-summary-item">
                                <img src="@(item.ShoeVariant.Shoe.ImageUrl ?? "/images/placeholder.png")" 
                                     alt="@item.ShoeVariant.Shoe.Name" 
                                     class="order-item-image"
                                     onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2260%22 height=%2260%22%3E%3Crect fill=%22%23f8f9fa%22 width=%2260%22 height=%2260%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 font-size=%2220%22%3Eüëü%3C/text%3E%3C/svg%3E'" />
                                
                                <div class="order-item-info">
                                    <div class="order-item-name">@item.ShoeVariant.Shoe.Name</div>
                                    <div class="order-item-details">
                                        Maat: @item.ShoeVariant.Size | Kleur: @item.ShoeVariant.Color | Aantal: @item.Quantity
                                    </div>
                                </div>
                                
                                <div class="order-item-price">
                                    ‚Ç¨@((item.Quantity * item.Price).ToString("0.00"))
                                </div>
                            </div>
                        }

                        <div class="mt-3">
                            <div class="summary-row">
                                <span>Subtotaal:</span>
                                <span>‚Ç¨@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                            <div class="summary-row">
                                <span>Verzendkosten:</span>
                                <span>Gratis</span>
                            </div>
                            <div class="summary-row total">
                                <span>Totaal:</span>
                                <span>‚Ç¨@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                        </div>

                        <button type="submit" class="place-order-btn">
                            üîí Bestelling Plaatsen
                        </button>

                        <div class="secure-badge">
                            üîí Veilige en versleutelde verbinding
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Je winkelwagen is leeg</p>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
