@model BestelApp_Web.Controllers.VoorraadBeheerViewModel

@{
    ViewData["Title"] = "Voorraad aanpassen";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Voorraad</div>
        <h1 class="catalog-title">@Model.Merk @Model.Naam</h1>
        <p class="catalog-subtitle">@Model.CategoryNaam</p>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="p-4" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
                <div style="font-weight:700; margin-bottom:0.5rem;">Nieuwe variant toevoegen</div>
                <form asp-action="AddVariant" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="SchoenId" value="@Model.SchoenId" />

                    <div class="mb-3">
                        <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Maat</label>
                        <input class="form-control" type="number" name="Maat" min="20" max="50" value="42" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Kleur</label>
                        <input class="form-control" type="text" name="Kleur" placeholder="bv. Zwart" maxlength="50" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Stock</label>
                        <input class="form-control" type="number" name="Stock" min="0" max="10000" value="0" required />
                    </div>

                    <button class="btn-luxe w-100" type="submit">Toevoegen</button>
                </form>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="p-4" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div>
                        <div style="font-weight:700;">Bestaande varianten</div>
                        <div style="color:hsl(var(--muted-foreground)); font-size:0.95rem;">Pas stock aan per maat & kleur.</div>
                    </div>
                    <a class="btn-luxe-outline" asp-action="Index">Terug</a>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Maat</th>
                                <th>Kleur</th>
                                <th style="width: 170px;">Stock</th>
                                <th style="width: 120px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Varianten != null && Model.Varianten.Any())
                        {
                            foreach (var v in Model.Varianten)
                            {
                                <tr>
                                    <td>@v.Maat</td>
                                    <td>@v.Kleur</td>
                                    <td>
                                        <form asp-action="UpdateVariant" method="post" class="d-flex gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="SchoenId" value="@Model.SchoenId" />
                                            <input type="hidden" name="VariantId" value="@v.VariantId" />
                                            <input class="form-control" type="number" name="NieuweStock" min="0" max="10000" value="@v.Stock" />
                                            <button class="btn-luxe" type="submit" style="white-space:nowrap;">Opslaan</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form asp-action="DeleteVariant" method="post" onsubmit="return confirm('Variant verwijderen?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="schoenId" value="@Model.SchoenId" />
                                            <input type="hidden" name="variantId" value="@v.VariantId" />
                                            <button class="btn-luxe-outline" type="submit">Verwijder</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" style="color:hsl(var(--muted-foreground));">Nog geen varianten. Voeg er links een toe.</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

