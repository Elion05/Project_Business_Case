@model IEnumerable<BestelApp_Models.Shoe>

@{
    ViewData["Title"] = "Voorraad beheren";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Beheer</div>
        <h1 class="catalog-title">Voorraad beheren</h1>
        <p class="catalog-subtitle">Beheer stock per maat & kleur (ShoeVariants).</p>
    </div>

    <div class="filters-shell mb-4">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-8">
                <label class="luxe-label">Zoeken</label>
                <input class="luxe-control w-100" name="zoek" value="@ViewBag.Zoek" placeholder="Zoek op naam of merk..." />
            </div>
            <div class="col-12 col-md-4">
                <button class="btn-luxe w-100" type="submit">Zoek</button>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card-admin p-4">
            <div class="table-responsive">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Categorie</th>
                            <th>Varianten</th>
                            <th style="text-align: right;">Totaal Voorraad</th>
                            <th style="width: 200px; text-align: right;">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            var variantCount = s.Variants?.Count ?? 0;
                            var totalStock = s.Variants?.Sum(v => v.Stock) ?? 0;
                            var stockBadgeClass = totalStock == 0 ? "badge-stock-danger" : totalStock < 10 ? "badge-stock-warning" : "badge-stock-success";
                            var stockBadgeText = totalStock == 0 ? "Uitverkocht" : totalStock < 10 ? "Laag" : "Op voorraad";
                            
                            <tr>
                                <td>
                                    <div style="font-weight: 700; color: hsl(var(--foreground)); margin-bottom: 0.25rem;">@s.Name</div>
                                    <div style="font-size: 0.9rem; color: hsl(var(--muted-foreground));">@s.Brand</div>
                                </td>
                                <td style="color: hsl(var(--muted-foreground));">@(s.Category?.Name ?? "Schoenen")</td>
                                <td>
                                    <span class="badge-status">@variantCount varianten</span>
                                </td>
                                <td style="text-align: right;">
                                    <span class="badge-stock @stockBadgeClass">@totalStock - @stockBadgeText</span>
                                </td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a class="btn-luxe btn-sm" asp-action="Edit" asp-route-id="@s.Id">Voorraad</a>
                                        <a class="btn-luxe-outline btn-sm" asp-controller="Shoes" asp-action="Edit" asp-route-id="@s.Id">Bewerk</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="p-5 text-center" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
            <h3 style="font-family:'Playfair Display', serif;">Geen producten gevonden</h3>
            <p style="color:hsl(var(--muted-foreground)); margin:0;">Voeg eerst schoenen toe of pas je zoekterm aan.</p>
        </div>
    }
</div>

