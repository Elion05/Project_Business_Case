@model IEnumerable<BestelApp_Models.Shoe>

@{
    ViewData["Title"] = "Voorraad beheren";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Beheer</div>
        <h1 class="catalog-title">Voorraad beheren</h1>
        <p class="catalog-subtitle">Beheer stock per maat & kleur (ShoeVariants).</p>
    </div>

    <div class="filters-shell mb-4">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-8">
                <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Zoeken</label>
                <input class="form-control" name="zoek" value="@ViewBag.Zoek" placeholder="Zoek op naam of merk..." />
            </div>
            <div class="col-12 col-md-4">
                <button class="btn-luxe w-100" type="submit">Zoek</button>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var s in Model)
            {
                var variantCount = s.Variants?.Count ?? 0;
                var totalStock = s.Variants?.Sum(v => v.Stock) ?? 0;

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="p-4" style="background: var(--gradient-card); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft); height: 100%;">
                        <div class="d-flex align-items-start justify-content-between gap-2">
                            <div>
                                <div style="font-size: 0.85rem; color: hsl(var(--muted-foreground));">@((s.Category?.Name) ?? "Schoenen")</div>
                                <div style="font-weight:700; color:hsl(var(--foreground));">@s.Name</div>
                                <div style="color:hsl(var(--muted-foreground));">@s.Brand</div>
                            </div>
                            <div style="text-align:right;">
                                <div style="font-weight:700; color:hsl(var(--foreground));">@totalStock</div>
                                <div style="font-size:0.85rem; color:hsl(var(--muted-foreground));">stock</div>
                            </div>
                        </div>

                        <div style="margin-top: 1rem; color:hsl(var(--muted-foreground)); font-size:0.95rem;">
                            Varianten: <strong>@variantCount</strong>
                        </div>

                        <div class="d-grid gap-2" style="margin-top: 1.25rem;">
                            <a class="btn-luxe" asp-action="Edit" asp-route-id="@s.Id">Voorraad aanpassen</a>
                            <a class="btn-luxe-outline" asp-controller="Shoes" asp-action="Edit" asp-route-id="@s.Id">Product bewerken</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="p-5 text-center" style="background: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: 16px; box-shadow: var(--shadow-soft);">
            <h3 style="font-family:'Playfair Display', serif;">Geen producten gevonden</h3>
            <p style="color:hsl(var(--muted-foreground)); margin:0;">Voeg eerst schoenen toe of pas je zoekterm aan.</p>
        </div>
    }
</div>

