@model BestelApp_Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Inloggen";
}

<style>
    .page-header {
        background: var(--gradient-hero);
        color: hsl(var(--primary-foreground));
        padding: 3rem 0;
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        font-size: 1rem;
        color: #bdc3c7;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .form-container {
        background: hsl(var(--card));
        border-radius: 12px;
        padding: 2rem;
        box-shadow: var(--shadow-card);
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.75rem;
    }

    .form-control:focus {
        border-color: hsl(var(--accent));
        box-shadow: 0 0 0 0.2rem hsla(35, 70%, 50%, 0.25);
    }
</style>

<!-- Header -->
<div class="page-header">
    <div class="container text-center">
        <div class="section-subtitle">Account</div>
        <h1 class="section-title">ðŸ”‘ Inloggen</h1>
        <p class="mb-0">Log in op je account</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="form-container">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="GebruikersNaam" class="form-label">Gebruikersnaam</label>
                        <input asp-for="GebruikersNaam" class="form-control" placeholder="Voer je gebruikersnaam in" />
                        <span asp-validation-for="GebruikersNaam" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Wachtwoord" class="form-label">Wachtwoord</label>
                        <input asp-for="Wachtwoord" class="form-control" placeholder="Voer je wachtwoord in" />
                        <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="OnthoudMij" class="form-check-input" />
                        <label asp-for="OnthoudMij" class="form-check-label">Onthoud mij</label>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Inloggen</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-0">
                        Nog geen account? 
                        <a asp-action="Register" class="fw-bold">Registreer hier</a>
                    </p>
                </div>

                <!-- Test accounts info -->
                <div class="alert alert-info mt-4" role="alert">
                    <h6 class="alert-heading">Test Accounts:</h6>
                    <small>
                        <strong>Admin:</strong> admin / Admin123!<br />
                        <strong>User:</strong> user / User123!
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
