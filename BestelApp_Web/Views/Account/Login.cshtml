@model BestelApp_Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Inloggen";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Inloggen</h2>

                <!-- Validatie samenvatting -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <form asp-action="Login" method="post">
                    <!-- Gebruikersnaam -->
                    <div class="mb-3">
                        <label asp-for="GebruikersNaam" class="form-label"></label>
                        <input asp-for="GebruikersNaam" class="form-control" placeholder="Voer je gebruikersnaam in" />
                        <span asp-validation-for="GebruikersNaam" class="text-danger"></span>
                    </div>

                    <!-- Wachtwoord -->
                    <div class="mb-3">
                        <label asp-for="Wachtwoord" class="form-label"></label>
                        <input asp-for="Wachtwoord" class="form-control" placeholder="Voer je wachtwoord in" />
                        <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                    </div>

                    <!-- Onthoud mij checkbox -->
                    <div class="mb-3 form-check">
                        <input asp-for="OnthoudMij" class="form-check-input" />
                        <label asp-for="OnthoudMij" class="form-check-label"></label>
                    </div>

                    <!-- Submit knop -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Inloggen</button>
                    </div>
                </form>

                <!-- Link naar registratie -->
                <div class="text-center mt-3">
                    <p class="mb-0">
                        Nog geen account? 
                        <a asp-action="Register">Registreer hier</a>
                    </p>
                </div>

                <!-- Test accounts info (alleen voor development) -->
                <div class="alert alert-info mt-4" role="alert">
                    <h6 class="alert-heading">Test Accounts:</h6>
                    <small>
                        <strong>Admin:</strong> admin / Admin123!<br />
                        <strong>User:</strong> user / User123!
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

