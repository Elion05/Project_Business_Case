@using BestelApp_Web.Controllers;
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Beheer</div>
        <h1 class="catalog-title">Gebruikers</h1>
        <p class="catalog-subtitle">Zoek, blokkeer en beheer rollen of gegevens.</p>
    </div>

    <div class="filters-shell mb-4">
        <form asp-action="Index" asp-controller="Users" method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-6">
                <label class="luxe-label">Zoeken</label>
                <input type="text" name="username" class="luxe-control w-100" value="@ViewBag.username" placeholder="Zoek gebruikersnaam..." />
            </div>
            <div class="col-12 col-md-4">
                <label class="luxe-label">Rol</label>
                <select name="roleId" class="luxe-control luxe-select w-100" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="col-12 col-md-2">
                <button class="btn-luxe w-100" type="submit">Filter</button>
            </div>
        </form>
    </div>

    <div class="card-admin p-4">
        <div class="table-responsive">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th>Gebruikersnaam</th>
                        <th>E-mail</th>
                        <th>Status</th>
                        <th>Rollen</th>
                        <th style="width: 280px; text-align: right;">Acties</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight: 700; color: hsl(var(--foreground));">@item.UserName</td>
                        <td style="color: hsl(var(--muted-foreground));">@item.Email</td>
                        <td>
                            @if (item.Blocked)
                            {
                                <span class="badge-status" style="background: hsl(var(--danger) / 0.1); color: hsl(var(--danger)); border-color: hsl(var(--danger) / 0.3);">Geblokkeerd</span>
                            }
                            else
                            {
                                <span class="badge-status" style="background: hsl(120 40% 95%); color: hsl(120 40% 30%); border-color: hsl(120 40% 80%);">Actief</span>
                            }
                        </td>
                        <td>
                            @foreach (var role in item.Roles)
                            {
                                <span class="badge-status">@role</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-2 flex-wrap justify-content-end">
                                <a class="btn-luxe-outline btn-sm" asp-action="Edit" asp-route-id="@item.Id">Bewerk</a>
                                <a class="btn-luxe-outline btn-sm" asp-action="Roles" asp-route-id="@item.Id">Rollen</a>
                                @if (item.Blocked)
                                {
                                    <a class="btn-luxe btn-sm" asp-action="BlockUnblock" asp-route-id="@item.Id">Deblokkeer</a>
                                }
                                else
                                {
                                    <a class="btn-luxe-ghost btn-sm" asp-action="BlockUnblock" asp-route-id="@item.Id">Blokkeer</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>