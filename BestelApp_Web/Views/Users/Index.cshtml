@using BestelApp_Web.Controllers;
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container" style="max-width: 1100px; padding-top: 2rem;">
    <div class="catalog-hero" style="margin-bottom: 1.5rem;">
        <div class="catalog-kicker">Beheer</div>
        <h1 class="catalog-title">Gebruikers</h1>
        <p class="catalog-subtitle">Zoek, blokkeer en beheer rollen of gegevens.</p>
    </div>

    <div class="filters-shell mb-4">
        <form asp-action="Index" asp-controller="Users" method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-6">
                <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Zoeken</label>
                <input type="text" name="username" class="form-control" value="@ViewBag.username" placeholder="Zoek gebruikersnaam..." />
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label" style="font-weight:600; color:hsl(var(--muted-foreground));">Rol</label>
                <select name="roleId" class="form-select" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="col-12 col-md-2">
                <button class="btn-luxe w-100" type="submit">Filter</button>
            </div>
        </form>
    </div>

    <div class="p-4" style="background:hsl(var(--card)); border:1px solid hsl(var(--border)); border-radius:16px; box-shadow: var(--shadow-soft);">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Status</th>
                        <th>@Html.DisplayNameFor(model => model.Roles)</th>
                        <th style="width: 240px;"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight:700;">@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.Blocked)
                            {
                                <span style="color:hsl(var(--muted-foreground)); font-weight:600;">Geblokkeerd</span>
                            }
                            else
                            {
                                <span style="color:hsl(var(--primary)); font-weight:600;">Actief</span>
                            }
                        </td>
                        <td>
                            @foreach (var role in item.Roles)
                            {
                                <span style="display:inline-block; padding: 4px 10px; border-radius:999px; border:1px solid hsl(var(--border)); background:hsl(var(--muted)); margin-right:6px; font-size:0.9rem;">@role</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-2 flex-wrap justify-content-end">
                                <a class="btn-luxe-outline" asp-action="Roles" asp-route-id="@item.Id">Rollen</a>
                                <a class="btn-luxe-outline" asp-action="Edit" asp-route-id="@item.Id">Bewerk</a>
                                @if (item.Blocked)
                                {
                                    <a class="btn-luxe" asp-action="BlockUnblock" asp-route-id="@item.Id">Deblokkeer</a>
                                }
                                else
                                {
                                    <a class="btn-luxe-outline" asp-action="BlockUnblock" asp-route-id="@item.Id">Blokkeer</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>